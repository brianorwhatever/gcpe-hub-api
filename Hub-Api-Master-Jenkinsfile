node('master') {
    stage('Code Quality') {
        echo "Running SonarQube static code analysis."
        openshiftBuild bldCfg: 'hub-api-sonar-master', showBuildLogs: 'true'
    }

    stage('Dependency Security Check') {
        echo "Running Snyk analysis of dependencies"
        openshiftBuild bldCfg: 'hub-api-snyk-master', showBuildLogs: 'true'
    }

    stage('Build Image') {
        echo "Building..."
        openshiftBuild bldCfg: 'hub-api-master', showBuildLogs: 'true'
        openshiftTag destStream: 'hub-api', verbose: 'true', destTag: 'MASTER-$BUILD_ID', srcStream: 'hub-api', srcTag: 'latest'
    }

    stage('Deploy on Test') {
        echo "Deploying to test..."
        openshiftTag destStream: 'hub-api', verbose: 'true', destTag: 'test', srcStream: 'hub-api', srcTag: 'MASTER-$BUILD_ID'
    }
}

stage('Deploy on Prod') {
    input "Deploy to Prod?"
    node('master') {
        openshiftTag destStream: 'hub-api', verbose: 'true', destTag: 'prod', srcStream: 'hub-api', srcTag: 'MASTER-$BUILD_ID'
    }
}
